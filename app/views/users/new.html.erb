<h1>Create Account</h1>
<div>
  <%= form_for User.new do |form| %>
    <p> First Name: <%= form.text_field :firstname%></p>
    <p> Last Name: <%= form.text_field :lastname%></p>
    <p> Email: <%= form.text_field :email%></p>
    <p> Password: <%= form.password_field :password%></p>
    <p> Password Confirmation: <%= form.password_field :password_confirmation%></p>
    <%= form.submit 'Submit' %>
  <% end %>
</div>